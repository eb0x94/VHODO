<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="@color/colorAccentDark"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:background="@drawable/custom_message_color"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/neigbourNameText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/neighbourEmailText"
                android:layout_alignTop="@+id/sendNeighbourEmailButton"
                android:textColor="@color/colorAccent"
                android:layout_alignRight="@+id/neigbourNameText"
                android:layout_alignEnd="@+id/neigbourNameText"
                android:layout_alignLeft="@+id/neighbourPhoneText"
                android:layout_alignStart="@+id/neighbourPhoneText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="asd"
                android:id="@+id/neighbourPhoneText"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp"
                android:layout_alignTop="@+id/callNeighbourButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80dp"
                android:height="10dp"
                android:background="@drawable/custom_problem_color"
                android:drawableLeft="@mipmap/ic_call_black_24dp"
                android:paddingLeft="10dp"
                android:text="@string/callButton"
                android:id="@+id/callNeighbourButton"
                android:nestedScrollingEnabled="false"
                android:layout_above="@+id/sendNeighbourEmailButton"
                android:layout_alignLeft="@+id/sendNeighbourEmailButton"
                android:layout_alignStart="@+id/sendNeighbourEmailButton" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_problem_color"
                android:drawableLeft="@mipmap/ic_mail_outline_black_24dp"
                android:text="send mail"
                android:id="@+id/sendNeighbourEmailButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:paddingLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>