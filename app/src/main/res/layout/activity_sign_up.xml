<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivo.vhodo.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/su_margin"
        android:ems="10"
        android:id="@+id/su_name"
        android:hint="full name"
        android:layout_below="@+id/su_username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/su_margin"
        android:ems="10"
        android:id="@+id/su_pass"
        android:hint="password"
        android:layout_below="@+id/su_name"
        android:layout_alignLeft="@+id/su_name"
        android:layout_alignStart="@+id/su_name"
        android:password="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/su_margin"

        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/su_passConfirm"
        android:hint="confirm password"
        android:layout_below="@+id/su_pass"
        android:layout_alignLeft="@+id/su_pass"
        android:layout_alignStart="@+id/su_pass" />

    <EditText
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/su_email"
        android:hint="e-mail"
        android:layout_below="@+id/su_passConfirm"
        android:layout_alignLeft="@+id/su_passConfirm"
        android:layout_alignStart="@+id/su_passConfirm"
        android:layout_marginTop="@dimen/su_margin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/su_margin"
        android:ems="10"
        android:id="@+id/su_username"
        android:hint="username"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/su_name"
        android:layout_alignStart="@+id/su_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/su_phone"
        android:hint="phone number"
        android:layout_below="@+id/su_email"
        android:layout_alignLeft="@+id/su_email"
        android:layout_alignStart="@+id/su_email"
        android:layout_marginTop="@dimen/su_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:onClick="onSignUpClickTwo"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/su_phone"
        android:layout_alignStart="@+id/su_phone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/showPassButton"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/su_phone"
        android:layout_alignEnd="@+id/su_phone" />

</RelativeLayout>
